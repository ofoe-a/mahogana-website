<!-- JAVASCRIPT FOR AUTO-SCROLLING PARTNERS CAROUSEL -->
<script>
  const track = document.getElementById('partnersTrack');
  const prevBtn = document.getElementById('partnersPrev');
  const nextBtn = document.getElementById('partnersNext');
  const logoTemplate = document.getElementById('partnerLogos');

  if (track && logoTemplate) {
    // Duplicate logos so scroll feels infinite
    track.append(...logoTemplate.content.cloneNode(true).children);
    track.append(...logoTemplate.content.cloneNode(true).children);

    const scrollStep = 7.0; // adjust speed (pixels per frame)
    let autoScroll;

    const startAutoScroll = () => {
      stopAutoScroll();
      autoScroll = setInterval(() => {
        track.scrollLeft += scrollStep;
        if (track.scrollLeft >= track.scrollWidth / 2) {
          // reset to beginning for seamless loop
          track.scrollLeft = 0;
        }
      }, 16); // roughly 60fps
    };

    const stopAutoScroll = () => clearInterval(autoScroll);

    // Start auto-scroll after a short delay
    startAutoScroll();

    // Pause when user hovers or touches
    track.addEventListener('mouseenter', stopAutoScroll);
    track.addEventListener('mouseleave', startAutoScroll);
    track.addEventListener('touchstart', stopAutoScroll, { passive: true });
    track.addEventListener('touchend', startAutoScroll, { passive: true });

    // Manual buttons override temporarily
    const manualScroll = (dir) => {
      stopAutoScroll();
      const scrollBy = Math.max(280, Math.floor(track.clientWidth * 0.6));
      track.scrollBy({ left: dir * scrollBy, behavior: 'smooth' });
      setTimeout(startAutoScroll, 3000); // resume after 3s
    };

    if (prevBtn && nextBtn) {
      prevBtn.addEventListener('click', () => manualScroll(-1));
      nextBtn.addEventListener('click', () => manualScroll(1));
    }
  }
</script>

<!-- WORD CYCLER: wood & [space → office → homes → hotels → retail] -->
<script>
  (function () {
    const el = document.getElementById('heroWord');
    if (!el) return;

    const words = ['space', 'office', 'home', 'hotel', 'retail'];
    let i = 0;

    // ensure starting state
    el.textContent = words[i];

    const swap = () => {
      // fade/slide out
      el.classList.add('opacity-0', 'translate-y-2');
      setTimeout(() => {
        i = (i + 1) % words.length;
        el.textContent = words[i];
        // fade/slide in
        el.classList.remove('opacity-0', 'translate-y-2');
      }, 220); // out duration
    };

    setInterval(swap, 1800); // change every ~1.8s
  })();
</script>

<!-- FEATURE CARD REVEAL ON SCROLL -->
<script>
  (function () {
    const cards = document.querySelectorAll('.reveal');
    if (!cards.length) return;

    // initial hidden state (Tailwind classes)
    cards.forEach((c) => {
      c.classList.add('opacity-0', 'translate-y-8');
    });

    const io = new IntersectionObserver(
      (entries, obs) => {
        entries.forEach((e) => {
          if (!e.isIntersecting) return;
          const el = e.target;

          // optional: respect our stagger delays
          const d = [...el.classList].find(cls => cls.startsWith('delay-'));
          const ms = d ? Number(d.replace('delay-', '')) : 0;

          setTimeout(() => {
            el.classList.remove('opacity-0', 'translate-y-8');
            el.classList.add('opacity-100', 'translate-y-0');
          }, ms);

          obs.unobserve(el);
        });
      },
      { threshold: 0.2 }
    );

    cards.forEach((c) => io.observe(c));
  })();
</script>