---
const navLinks = [
  { name: "Home", href: "/" },
  { name: "Products", href: "/#products" },
  { name: "Process", href: "/process" },
  { name: "Projects", href: "/projects" },
  { name: "Sustainability", href: "/sustainability" },
  { name: "About", href: "/about" },
];
---


<header class="fixed inset-x-0 top-0 z-50 bg-brand-brown/95 backdrop-blur border-b border-white/10">
  <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-4 text-white">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 font-semibold text-lg hover:text-brand-gold transition">
      <img src="/images/mahogana-logo.svg" alt="Mahogana Logo" class="h-7 w-auto" loading="eager" />
      <!-- <span class="hidden sm:inline"></span> -->
    </a>

    <!-- Nav -->
    <nav class="hidden md:flex items-center gap-8 text-sm font-medium">
      {navLinks.map(link => (
        <a href={link.href} class="hover:text-brand-gold transition">{link.name}</a>
      ))}
    </nav>

    <!-- CTA -->
    <a href="/contact" class="btn btn-primary text-sm">Lets Talk</a>
  </div>
</header>